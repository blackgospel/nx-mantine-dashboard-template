{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@omnidash/api": ["libs/api/src/index.ts"],
      "@omnidash/assets": ["libs/assets/src/index.ts"],
      "@omnidash/components": ["libs/components/src/index.ts"],
      "@omnidash/config": ["libs/config/src/index.ts"],
      "@omnidash/hooks": ["libs/hooks/src/index.ts"],
      "@omnidash/illustrations": ["libs/illustrations/src/index.ts"],
      "@omnidash/layouts": ["libs/layouts/src/index.ts"],
      "@omnidash/mocks": ["libs/mocks/src/index.ts"],
      "@omnidash/providers": ["libs/providers/src/index.ts"],
      "@omnidash/routes": ["libs/routes/src/index.ts"],
      "@omnidash/schema": ["libs/schema/src/index.ts"],
      "@omnidash/store": ["libs/store/src/index.ts"],
      "@omnidash/theme": ["libs/theme/src/index.ts"],
      "@omnidash/ui": ["libs/ui/src/index.ts"],
      "@omnidash/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
